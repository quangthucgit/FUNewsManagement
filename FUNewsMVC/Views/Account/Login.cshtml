@model FUNewsMVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU News Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(45deg, #2c3e50 0%, #34495e 50%, #2c3e50 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            background: #ffffff;
            border-radius: 0;
            padding: 60px 50px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
            min-height: 550px;
            border-left: 5px solid #e67e22;
        }

        .login-header {
            text-align: left;
            margin-bottom: 40px;
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 20px;
        }

            .login-header h2 {
                color: #2c3e50;
                font-weight: 300;
                font-size: 32px;
                margin-bottom: 10px;
                letter-spacing: 1px;
            }

            .login-header p {
                color: #7f8c8d;
                font-size: 14px;
                margin: 0;
            }

        .form-label {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 13px;
            display: block;
            text-transform: uppercase;
        }

        .form-control {
            border: none;
            border-bottom: 2px solid #bdc3c7;
            border-radius: 0;
            padding: 15px 0;
            font-size: 16px;
            background: transparent;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-bottom-color: #e67e22;
                box-shadow: none;
                background: transparent;
            }

            .form-control::placeholder {
                color: #95a5a6;
                font-style: italic;
            }

        .btn-login {
            background: #e67e22;
            border: none;
            border-radius: 0;
            padding: 18px 40px;
            font-size: 14px;
            font-weight: 600;
            color: white;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 30px;
        }

            .btn-login:hover {
                background: #d35400;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(230, 126, 34, 0.3);
            }

        .alert {
            border-radius: 0;
            border: none;
            border-left: 4px solid #e74c3c;
            padding: 15px 20px;
            margin-bottom: 30px;
            background: #fdf2f2;
        }

        .alert-danger {
            color: #c0392b;
            font-size: 14px;
        }

        .text-danger {
            color: #e74c3c !important;
            font-size: 11px;
            margin-top: 8px;
            font-weight: 500;
        }

        .mb-3 {
            margin-bottom: 35px !important;
        }

        .form-footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #ecf0f1;
        }

            .form-footer a {
                color: #e67e22;
                text-decoration: none;
                font-size: 13px;
                font-weight: 500;
            }

                .form-footer a:hover {
                    color: #d35400;
                    text-decoration: underline;
                }

        
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>FU News Management</h2>
        </div>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-6">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-login">Sign In</button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>
