@using BusinessObjects
@model IEnumerable<NewsArticle>
@{
    ViewData["Title"] = "Báo cáo tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Báo cáo tin tức
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <form method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="startDate" class="form-label">Từ ngày</label>
                                <input type="date"
                                       class="form-control"
                                       id="startDate"
                                       name="startDate"
                                       value="@ViewBag.StartDate">
                            </div>
                            <div class="col-md-4">
                                <label for="endDate" class="form-label">Đến ngày</label>
                                <input type="date"
                                       class="form-control"
                                       id="endDate"
                                       name="endDate"
                                       value="@ViewBag.EndDate">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        Lọc
                                    </button>
                                    <a href="@Url.Action("Reports")" class="btn btn-outline-secondary">
                                        <i class="fas fa-refresh me-1"></i>
                                        Đặt lại
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (Model.Any())
                    {
                        <!-- Summary Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="card-title">Tổng bài viết</h6>
                                                <h3 class="mb-0">@Model.Count()</h3>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-newspaper fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="card-title">Đang hoạt động</h6>
                                                <h3 class="mb-0">@Model.Count(n => n.NewsStatus)</h3>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-check-circle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="card-title">Không hoạt động</h6>
                                                <h3 class="mb-0">@Model.Count(n => !n.NewsStatus)</h3>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-pause-circle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-secondary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="card-title">Danh mục</h6>
                                                <h3 class="mb-0">@Model.Select(n => n.CategoryID).Distinct().Count()</h3>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-tags fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Chart Section -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Thống kê theo danh mục</h6>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="categoryChart" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Thống kê theo trạng thái</h6>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="statusChart" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Export Options -->
                        <div class="mb-3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>
                                    Xuất Excel
                                </button>
                                <button type="button" class="btn btn-danger" onclick="exportToPDF()">
                                    <i class="fas fa-file-pdf me-1"></i>
                                    Xuất PDF
                                </button>
                                <button type="button" class="btn btn-info" onclick="printReport()">
                                    <i class="fas fa-print me-1"></i>
                                    In báo cáo
                                </button>
                            </div>
                        </div>

                        <!-- Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="reportsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã tin</th>
                                        <th>Tiêu đề</th>
                                        <th>Danh mục</th>
                                        <th>Nguồn tin</th>
                                        <th>Người tạo</th>
                                        <th>Ngày tạo</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var article in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <span class="badge bg-secondary">@article.NewsArticleID</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@article.NewsTitle</strong>
                                                    @if (!string.IsNullOrEmpty(article.Headline))
                                                    {
                                                        <br>
                                                        <small class="text-muted">
                                                            @(article.Headline.Length > 60 ? article.Headline.Substring(0, 60) + "..." : article.Headline)
                                                        </small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @if (article.Category != null)
                                                {
                                                    <span class="badge bg-primary">@article.Category.CategoryName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa phân loại</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(article.NewsSource))
                                                {
                                                    <small class="text-muted">
                                                        @(article.NewsSource.Length > 30 ? article.NewsSource.Substring(0, 30) + "..." : article.NewsSource)
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.CreatedBy != null)
                                                {
                                                    <span>@article.CreatedBy.AccountName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.CreatedDate.HasValue)
                                                {
                                                    <span>@article.CreatedDate.Value.ToString("dd/MM/yyyy")</span>
                                                    <br>
                                                    <small class="text-muted">@article.CreatedDate.Value.ToString("HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.NewsStatus)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>
                                                        Hoạt động
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-pause me-1"></i>
                                                        Không hoạt động
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Details", new { id = article.NewsArticleID })"
                                                       class="btn btn-outline-info btn-sm"
                                                       title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = article.NewsArticleID })"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination (if needed) -->
                        @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               href="@Url.Action("Reports", new {
                                                   page = i,
                                                   startDate = ViewBag.StartDate,
                                                   endDate = ViewBag.EndDate
                                               })">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <!-- No Data Message -->
                        <div class="text-center py-5">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có dữ liệu</h5>
                            <p class="text-muted">
                                @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
                                {
                                    <span>Không tìm thấy bài viết nào trong khoảng thời gian từ @ViewBag.StartDate đến @ViewBag.EndDate.</span>
                                }
                                else
                                {
                                    <span>Chọn khoảng thời gian để xem báo cáo hoặc chưa có bài viết nào.</span>
                                }
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .badge {
            font-size: 0.75rem;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }
       
    </style>
}

@section Scripts {
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>


}